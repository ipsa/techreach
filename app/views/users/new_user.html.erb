<h2>Check Your Email to Complete Registration</h2>
<p>
	We sent an email to <strong class="hl"><%= @user.email %></strong> to activate your account. It should 
	arrive within 30 minutes, so be sure check your inbox and click the link in the message.
</p>

<%= title 'Update Your Profile', :h3 %>
<% form_for @user, :url => {:action => 'update_new_user'} do |f| %>
	<%= f.error_messages %>
	
	<div class="form_item">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>
	
	<div class="form_item">
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>
	
	<div class="form_item">
		<%= f.label :school_id %>
		<%= f.collection_select :school_id, School.find(:all, :order => :name), :id, :name, {:include_blank => true} %>
	</div>
	
	<div class="form_item">
		<%= f.label :description, 'About Yourself' %>
		<%= f.text_area :description %>
		<small>e.g. What grade and classes do you teach?</small>
	</div>
	
	<div class="form_buttons">
		<%= submit_tag 'Save Profile' %>
	</div>
<% end %>
